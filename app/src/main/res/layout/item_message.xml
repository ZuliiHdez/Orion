<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Layout para mensajes recibidos -->
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="80dp"
        android:padding="8dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/light_blue">

        <!-- Texto del mensaje -->
        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Hello" />

        <!-- Marca de tiempo -->
        <TextView
            android:id="@+id/left_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:text="12:34" />
    </LinearLayout>

    <!-- Layout para mensajes enviados -->
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:padding="8dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/blue">

        <!-- Texto del mensaje -->
        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Hi!" />

        <!-- Marca de tiempo -->
        <TextView
            android:id="@+id/right_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:text="12:35" />
    </LinearLayout>
</RelativeLayout>
